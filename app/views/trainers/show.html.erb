<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% if @trainer.id == current_trainer.id %>
	<%= button_to "Create Pokemon", new_path(id: current_trainer.id), :class => "button medium", :method => :get %>
<% end %>
<p> List of Pokemons: <br/>
	<% @list = @trainer.pokemons%>
	<% @list.each do |x| %>
			<%= x.name %> (<%=x.health%>)
      <%= button_to "Damage!", damage_path(id: x.id), :class => "button medium", :method => :patch %>
	<% end %>
</p>
